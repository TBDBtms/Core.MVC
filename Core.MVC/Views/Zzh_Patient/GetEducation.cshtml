
@{
    ViewData["Title"] = "GetEducation";
    Layout = "~/Views/Home/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<div>
    <div style="width:1650px;height:100px">
        <div class="layui-input-block" style="width:300px;float:left;margin-top:50px">
            <input type="text" id="aaa" placeholder="学历名称" class="layui-input" />
        </div>
        <div style="float:left;margin-top:50px">
            <button type="button" class="layui-btn" onclick="cx()">查询</button>
        </div>
        <div style="float:right;margin-top:50px">
            <button type="button" class="layui-btn" style="float:right;margin-right:50px;" id="p1">
                <i class="layui-icon">&#xe608;</i> 添加
            </button>
        </div>
    </div>
    <div style="margin-top:50px">
        <div align="center" style="width:1650px;height:1000px">
            <table class="layui-table" style="text-align:center;margin-left:30px">
                <colgroup>
                    <col width="150">
                    <col width="200">
                    <col>
                </colgroup>
                <thead style="background-color:lavender">
                    <tr style="background-color: lavender">
                        <th style="text-align:center">序号</th>
                        <th style="text-align:center">学历名称</th>
                        <th style="text-align:center">创建时间</th>
                        <th style="text-align:center">创建人</th>
                        <th style="text-align:center">操作</th>
                    </tr>
                </thead>
                <tbody id="GetED">
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(function () {
        ShowEducation();
    })
    function ShowEducation() {
        var name = "";
        if ($("#aaa").val() != null) {
            name = $("#aaa").val();
        }
        $.ajax({
            url: "http://localhost:4965/api/Zzh_Patient/GetEducation?name=" + name,
            type: "get",
            dataType: "json",
            success: function (d) {
                $("#GetED").empty();
                $(d).each(function () {
                    var str = "<tr>" +
                        "<td>" + this.educationId + "</td>" +
                        "<td>" + this.educationName + "</td>" +
                        "<td>" + this.createTime + "</td>" +
                        "<td>" + this.createPeople + "</td>" +
                        "<td><a style='margin-left:15px' onclick='Update(" + this.educationId + ")'>编辑</a><a href='' style='margin-left:15px' onclick='Del(" + this.educationId + ")'>删除</a></td></tr>";
                    $("#GetED").append(str);
                });
            }
        });
    }
    function cx() {
        ShowEducation();
    }
    function Del(id) {
        confirm("确定要删除吗?")
        {
            $.ajax({
                url: "http://localhost:4965/api/Zzh_Patient/DelEducation?id=" + id,
                type: "post",
                dataType: "json",
                success: function (d) {
                    if (d > 0) {
                        alert("删除成功");
                        location.href = '/Zzh_Patient/GetEducation';
                    }
                    else {
                        alert("删除失败");
                    }
                }
            })
        }
    }
</script>

<script>
    layui.use("layer", function () {
        var layer = layui.layer;
        $("#p1").click(function () {
            layer.open({
                type: 1,
                area: ['500px', '300px'],
                content: $("#test"),
                title: '新增学历',
            });
        });
    })

    function Add() {
        var m = {
            EducationName: $("#XueLi").val(),
        }
        $.ajax({
            url: "http://localhost:4965/api/Zzh_Patient/AddEducation",
            type: "post",
            dataType: "json",
            data: m,
            success: function (d) {
                if (d > 0) {
                    alert("<button data-method='offset' data-type='auto' class='layui-btn layui-btn-normal'>添加成功</button>");
                    location.href = "/Zzh_Patient/GetEducation";
                }
                else {
                    alert("添加失败");
                }
            }
        })
    }
    function text3() {
        $('.test4').on('click', function () {
            layer.open({
                type: 2,
                title: false,
                closeBtn: 1, //不显示关闭按钮
                shade: [0],
                area: ['400px', '300px'],
                anim: 2,
                content: ['/JcyVIP/VIPBD?id=' + this.id, 'no'], //iframe的url，no代表不显示滚动条
            });
        });
    }
</script>

<div style="display:none" id="test">
    <span style="float:left;margin-top:40px">学历名称</span>
    <input type="text" id="XueLi" placeholder="" class="layui-input" style="float:left;width:350px;margin-top:35px;margin-left:10px" />
    <br />
    <button type="button" class="layui-btn" onclick="location.href='/Zzh_Patient/GetEducation'" style="float:right;margin-right:80px;margin-top:20px">取消</button>
    <button type="button" class="layui-btn" onclick="Add()" style="float:right;margin-right:50px;margin-top:20px">确定</button>
</div>
