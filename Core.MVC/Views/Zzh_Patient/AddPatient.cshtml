
@{
    ViewData["Title"] = "AddPatient";
    Layout = "~/Views/Home/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/layui-v2.4.5/layui/layui.js"></script>

<div style="background-color:gainsboro">
    <div style="height:100px;background-color:aqua">
        <h2 style="font-weight:bold;margin-left:100px;margin-top:50px;float:left">新增患者信息</h2>
        <button type="button" class="layui-btn" style="width:100px;height:50px;margin-right:100px; margin-top: 30px;float:right" onclick="location.href='/Zzh_Patient/GetPatient'">返回</button>
        <button type="button" class="layui-btn" style="width:100px;height:50px;margin-right:30px; margin-top: 30px;float:right">保存</button>
    </div>
    <div style="height:100px;background-color:yellow;margin-top:30px">
        <div style="margin-top:30px">
            <h3 style="margin-top:50px;margin-left:100px;margin-top:40px;float:left">患者姓名</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">患者卡号</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者卡号" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">患者年龄</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请输入数字" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">出生日期</h3>
            <form class="layui-form" >
                    <div class="layui-input-inline" style="margin-left:20px;margin-top:35px;">
                        <input type="text" name="date" id="date" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                    </div>

            </form>
        </div>
    </div>
    <div style="height:100px;background-color:aqua">
        <div style="margin-top:30px">
            <div class="layui-form-item" style="float:left">
                <form class="layui-form">
                    <label class="layui-form-label">性别</label>
                    <div style="width:300px">
                        <div class="layui-input-block">
                            <select name="interest" lay-filter="aihao" id="VIPgrade">
                                <option value="0">--请选择--</option>
                                <option value="1">男</option>
                                <option value="2">女</option>
                            </select>
                        </div>
                    </div>
               </form>
                    <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">手机号码</h3>
                    <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
                    <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">证件号码</h3>
                    <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
                    <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">患者来源</h3>
                    <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            </div>
        </div>
    </div>
    <div style="height:100px;background-color:beige">
        <div style="margin-top:30px">
            <h3 style="margin-top:50px;margin-left:100px;margin-top:40px;float:left">会员类型</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">到期时间</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">民族</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">婚姻状况</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
        </div>
    </div>
    <div style="height:100px;background-color:bisque">
        <div style="margin-top:30px">
            <h3 style="margin-top:50px;margin-left:100px;margin-top:40px;float:left">学历</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">地址</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">患者姓名</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
        </div>
    </div>
    <div style="height:100px;background-color:bisque">
        <div style="margin-top:30px">
            <h3 style="margin-top:50px;margin-left:100px;margin-top:40px;float:left">职业</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">工作单位</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
            <h3 style="margin-top:50px;margin-left:80px;margin-top:40px;float:left">备注</h3>
            <input type="text" name="title" style="width:200px;margin-left:20px;float:left;margin-top:30px;" lay-verify="title" autocomplete="off" placeholder="请填写患者姓名" class="layui-input">
        </div>
    </div>
    <div style="height:100px;background-color:coral"></div>
    <div style="height:100px;background-color:chartreuse"></div>
    <div style="height:100px;background-color:darkcyan"></div>




<script>
    var form;
    layui.use(['form', 'layedit', 'laydate'], function () {
        form = layui.form
            , layer = layui.layer
            , layedit = layui.layedit
            , laydate = layui.laydate;

        //日期
        laydate.render({
            elem: '#date'
        });
            //监听提交
            form.on('submit(formDemo)', function (data) {
                layer.msg(JSON.stringify(data.field));
                return false;
            });
        });
</script>