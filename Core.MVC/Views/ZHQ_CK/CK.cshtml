            </tbody>
        </table>
    </div>
   
</div>
<script>



    $(function () {
        init();
    });

    function init() {
        var i = 1;
        var js = sessionStorage.getItem("Rname");
        var pj;
        var name = $("#shuru").val();
        $.ajax({
            url: "http://localhost:4965/api/ZHQ_CK/GetCKSQ",
            data: {},
            type: "get",
            dataType: "json",
            success: function (d) {
                $("#tb").empty();
                $(d).each(function () {
                    if (js == "出库员" && this.cksqState == 3) {
                        var str = "<tr>" +
                            "<td>" + i + "</td>" +
                            "<td>" + this.cksqypName + "</td>" +
                            "<td><img src='" + this.cksqImg + "' style='height:50px;width:50px'/></td>" +
                            "<td>" + this.cksqNum + "</td>" +
                            "<td>" + this.gtime + "</td>" +
                            "<td>" + this.cksqlx + "</td>" +
                            "<td>" + this.cksqcgj + "</td>" +
                            "<td>" + this.cksqlsj + "</td>" +
                            "<td>" + this.cksqName + "</td>" +
                            "<td>" + this.cksqDesc + "</td>" +
                            "<td><a style='color:blue' href='#' onclick='SQTG(" + this.cksqId + "," + this.cksqNum + "," + this.tid + ")'>出库</a></td>" +
                            "</tr>";
                        $("#tb").append(str);
                        i++;
                    }
                });
              
            }
        })
    }


    function SQTG(id,num,tid) {
        $.ajax({
            url: "http://localhost:4965/api/ZHQ_CK/CKNUM",
            data: { id: id, num: num, tid: tid },
            type: "get",
            dataType: "json",
            success: function (d) {
                if (d == 1.5) {
                    alert('出库成功');
                    init();
                } else if (d == 3.5) {
                    alert('出库失败!请稍后重试!');
                    return;
                } else if (d == 2.5) {
                    alert('请稍后重试! 谢谢配合!');
                    return;
                } else {
                    if (confirm('库存不足!是否出该药品现有的库存数量!')) {
                        if (d == 0) {
                            alert('当前药品库存为0!请及时通知该负责人');
                            return;
                        }
                        $.ajax({
                            url: "http://localhost:4965/api/ZHQ_CK/CXNUM",
                            data: { xnum: d, tid: tid, id: id },
                            dataType: "json",
                            type: "get",
                            success: function (xnum) {
                                if (xnum > 0) {
                                    alert('操作成功');
                                    init();
                                    return;
                                } else {
                                    alert('请稍后重试!谢谢配合!')
                                    return;
                                }
                            }
                        })
                    }
                    return;
                }
            }
        })
    }

