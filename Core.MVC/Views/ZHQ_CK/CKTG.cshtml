                            "<td>" + this.cksqlsj + "</td>" +
                            "<td>" + this.cksqName + "</td>" +
                            "<td>" + this.cksqDesc + "</td>" +
                            "<td><a style='color:blue' href='#' onclick='SC(" + this.cksqId + ")'>删除</a></td>" +
                            "</tr>";
                        $("#tb").append(str);
                        i++;
                    }
