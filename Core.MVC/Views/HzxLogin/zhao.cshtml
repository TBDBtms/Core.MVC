
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="Login.css" />
</head>

<body>
    <p id="login">
        <h1>找回用户密码</h1>
        <input type="text" required="required" id="Uname" placeholder="用户名" name="p">
        <input type="text" required="required" id="Uiphone" placeholder="手机号" name="p">
        输入新密码<input type="password" required="required" id="Upass" placeholder="密码" name="p">
        <button class="but" type="submit" onclick="Xiu()">确认密码</button>

    </p>
    <style>

        html {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        body {
            width: 100%;
            height: 100%;
            font-family: 'Open Sans',sans-serif;
            margin: 0;
            background-color: #4A374A;
        }

        #login {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -150px 0 0 -150px;
            width: 300px;
            height: 300px;
        }

            #login h1 {
                color: #fff;
                text-shadow: 0 0 10px;
                letter-spacing: 1px;
                text-align: center;
            }

        h1 {
            font-size: 2em;
            margin: 0.67em 0;
        }

        input {
            width: 278px;
            height: 18px;
            margin-bottom: 10px;
            outline: none;
            padding: 10px;
            font-size: 13px;
            color: #fff;
            text-shadow: 1px 1px 1px;
            border-top: 1px solid #312E3D;
            border-left: 1px solid #312E3D;
            border-right: 1px solid #312E3D;
            border-bottom: 1px solid #56536A;
            border-radius: 4px;
            background-color: #2D2D3F;
        }

        .but {
            width: 300px;
            min-height: 20px;
            display: block;
            background-color: #4a77d4;
            border: 1px solid #3762bc;
            color: #fff;
            padding: 9px 14px;
            font-size: 15px;
            line-height: normal;
            border-radius: 5px;
            margin: 0;
        }
    </style>
</body>

</html>
<script>
    $().ready(function () {

        $("#Uname").text(@ViewBag.Uname);

    });
    function Xiu() {

       
        var Upass = $("#Upass").val();
        var Uname = $("#Uname").val();
        var Uiphone = $("#Uiphone").val();
        if (confirm("确认修改吗？")) {
            $.ajax({
                url: "http://localhost:4965/api/Hzx_Login/zhao",
                data: { Uname: Uname, Upass: Upass,Uiphone:Uiphone},
                type: "get",
                dataType: "json",
                success: function (d) {
                    if (d > 0) {
                        alert("找回密码成功，请重新登录");
                        location.href = "/HzxLogin/Login";
                    }
                    else {
                        alert("修改失败");

                    }
                }

            });
        }
    }
</script>